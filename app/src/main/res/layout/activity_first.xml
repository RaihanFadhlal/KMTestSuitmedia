<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.FirstActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="132dp"
        android:src="@drawable/ic_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputName"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="353dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/text_input_bg"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputPalindrome"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="415dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/text_input_bg"
        android:backgroundTint="@color/white"
        android:hint="Palindrome"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/checkPalindrome"
        android:layout_width="310dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="507dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_bg"
        android:backgroundTint="#2B637B"
        android:text="CHECK"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextSecond"
        android:layout_width="310dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="563dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_bg"
        android:backgroundTint="#2B637B"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>